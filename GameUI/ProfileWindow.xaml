<Window x:Class="CodenamesClient.GameUI.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodenamesClient.GameUI"
        xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
        mc:Ignorable="d"
        Title="Profile"
        Height="450" Width="600" Background="#FF1D1D1D">
    <Grid>
        <StackPanel>
            <Label Content="{x:Static language:Lang.profileProfile}" Style="{StaticResource title}" />
            <Button Click="Click_btnProfilePicture" Content="" Style="{StaticResource imageButtonFocus}" Width="75" Height="75">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/GameUI/Agents/placeholder_agent1.png"/>
                </Button.Background>
            </Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="0,0,50,0" Width="200">
                    <Label Content="{x:Static language:Lang.globalUsername}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxUsername" Text="" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="20"/>
                    <Label Content="{x:Static language:Lang.profileEmail}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxEmail" Text="" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16"/>
                    <Label Content="{x:Static language:Lang.profileName}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxName"  Text="" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="20"/>
                    <Label Content="{x:Static language:Lang.profileLastName}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxLastName" Text="" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Button Click="Click_btnBack" Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}" Width="100" Margin="0,20,0,0" />
                </StackPanel>
                <StackPanel Margin="50,0,0,0" Width="200">
                    <Label Content="Facebook" Style="{StaticResource normal}" />
                    <TextBox Name="tBxFacebook" Text="" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Label Content="Instagram" Style="{StaticResource normal}" />
                    <TextBox Name="tBxInstagram" Text="" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Label Content="Discord" Style="{StaticResource normal}" />
                    <TextBox Name="tBxDiscord"  Text="" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Label Content="Address" Style="{StaticResource normal}" />
                    <TextBox Name="tBxAddress"  Text="Not implemented yet" 
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" IsEnabled="False" />
                    <Button Click="Click_btnSave" Content="{x:Static language:Lang.globalSave}" Style="{StaticResource buttonCustomFocus}" Width="100" Margin="0,20,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
