<Page x:Class="CodenamesClient.GameUI.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodenamesClient.GameUI.Pages"
      xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
      xmlns:viewmodels="clr-namespace:CodenamesClient.GameUI.ViewModels"
      xmlns:uc="clr-namespace:CodenamesClient.GameUI.Pages.UserControls"
      d:DataContext="{d:DesignInstance Type=viewmodels:MainMenuViewModel}"
      d:DesignHeight="640" d:DesignWidth="1024" Background="#FF1D1D1D"
      mc:Ignorable="d"
      Title="MainMenuPage"
      HorizontalAlignment="Center" VerticalAlignment="Center">

    <!-- General animations -->
    <Page.Resources>
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetName="SettingsGrid"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetName="SettingsGrid"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideInFriendsAnimation">
            <DoubleAnimation Storyboard.TargetName="FriendsGrid"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutFriendsAnimation">
            <DoubleAnimation Storyboard.TargetName="FriendsGrid"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideInGameModeAnimation">
            <DoubleAnimation Storyboard.TargetName="GameModeGrid"
             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
             From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideOutGameModeAnimation">
            <DoubleAnimation Storyboard.TargetName="GameModeGrid"
             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
             From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideInScoreboardsAnimation">
            <DoubleAnimation Storyboard.TargetName="ScoreboardsGrid"
             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
             From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideOutScoreboardsAnimation">
            <DoubleAnimation Storyboard.TargetName="ScoreboardsGrid"
             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
             From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>
    <Viewbox Stretch="Uniform">
        <Grid x:Name="gridMainMenu" Width="1024" Height="640">
            <!-- Main menu -->
            <StackPanel x:Name="stackPanelMainMenu" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Codenames:" HorizontalAlignment="Left" Foreground="White" FontFamily="Consolas" FontSize="72" />
                        <!-- User -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="80,0,0,0">
                            <Label Content="{x:Static language:Lang.mainMenuLoggedIn}" Style="{StaticResource subtitle}" VerticalAlignment="Center"/>
                            <Button Name="btnPlayer" Click="Click_btnPlayer" Content="{Binding Username}" Style="{StaticResource buttonCustomFocus}" Width="250" Height="60" FontSize="24" Margin="0,0,10,0"/>
                            <Button Name="btnLogout" Click="Click_btnLogout" Style="{StaticResource imageButtonFocus}" Width="50" Height="60">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Assets/GameUI/logout.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <Label Content="Duet" Foreground="White" FontFamily="Bell MT" FontSize="72"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <Button Content="{x:Static language:Lang.globalPlay}" Style="{StaticResource buttonCustomFocus}"
                    Width="316" Height="60" FontSize="24" Margin="0,20,0,0" Click="Click_ShowGameMode"/>
                        <Button Content="{x:Static language:Lang.globalFriends}" Style="{StaticResource buttonCustomFocus}"
                    Width="316" Height="60" FontSize="24" Margin="0,10,0,0" Click="Click_ShowFriends"/>
                        <Button Content="{x:Static language:Lang.globalScoreboards}" Style="{StaticResource buttonCustomFocus}"
                    Width="316" Height="60" FontSize="24" Margin="0,10,0,0" Click="Click_ShowScoreboards"/>
                        <Button Content="{x:Static language:Lang.globalSettings}" Style="{StaticResource buttonCustomFocus}" Width="316" Height="60"
                    FontSize="24" Margin="0,10,0,0" Click="Click_ShowSettings"/>
                        <Button Content="{x:Static language:Lang.mainMenuQuit}" Style="{StaticResource buttonCustomFocus}"
                    Width="316" Height="60" FontSize="24" Margin="0,10,0,0" Click="Click_btnQuit"/>
                    </StackPanel>
                    <Image Height="362" Source="/Assets/GameUI/spyMap.png" Width="628" Stretch="Fill"/>
                </StackPanel>
            </StackPanel>

            <!-- Hidden overlay to block other actions-->
            <Border x:Name="Overlay" Visibility="Collapsed" Background="#80000000" />

            <!-- GamemodeGrid -->
            <Grid x:Name="GameModeGrid" Width="550" Height="400" Background="#272727" HorizontalAlignment="Center"
      VerticalAlignment="Center" Visibility="Collapsed">
                <Grid.RenderTransform>
                    <TranslateTransform Y="640"/>
                </Grid.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="{x:Static language:Lang.gamemodeChooseAGamemode}" Style="{StaticResource subtitle}" Foreground="White" 
               HorizontalAlignment="Center" Margin="0,20,0,20"/>

                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                        <Button Content="{x:Static language:Lang.gamemodeNormalGame}" Style="{StaticResource buttonCustomFocus}" Width="350" Height="60" 
                    FontSize="24" Margin="10" Click="Click_NormalGameMode"/>
                        <Button Content="{x:Static language:Lang.gamemodeCustomGame}" Style="{StaticResource buttonCustomFocus}" Width="350" Height="60"
                    FontSize="24" Margin="10" Click="Click_CustomGameMode"/>
                        <Button Content="{x:Static language:Lang.gamemodeCounterintelligenceMode}" Style="{StaticResource buttonCustomFocus}" Width="350" Height="60" 
                    FontSize="24" Margin="10" Click="Click_CounterintelligenceMode"/>
                    </StackPanel>

                    <Button Grid.Row="2" Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}" 
                Width="180" Height="40" Click="Click_HideGameMode" Margin="0,0,0,20"/>
                </Grid>
            </Grid>

            <!-- Settings Grid -->
            <Grid x:Name="SettingsGrid" Width="550" Height="400" Background="#272727"
      HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                <Grid.RenderTransform>
                    <TranslateTransform Y="640"/>
                </Grid.RenderTransform>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="{x:Static language:Lang.globalSettings}" Style="{StaticResource subtitle}"
               Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,20"/>
                    <StackPanel Grid.Row="1" Margin="20,0,20,20">
                        <Label Content="{x:Static language:Lang.soundMasterVolume}" Style="{StaticResource subtitle}" Foreground="White"
                   HorizontalAlignment="Left" Margin="0,10,0,0"/>
                        <Slider x:Name="sliderMaster" Minimum="0" Maximum="100" Value="50" ValueChanged="Slider_ValueChanged"/>
                        <Label Content="{x:Static language:Lang.soundGameEffects}" Style="{StaticResource subtitle}" Foreground="White"
                   HorizontalAlignment="Left" Margin="0,20,0,0"/>
                        <Slider x:Name="sliderSFX" Minimum="0" Maximum="100" Value="50" ValueChanged="Slider_ValueChanged"/>
                        <Label Content="{x:Static language:Lang.soundMusicVolume}" Style="{StaticResource subtitle}" Foreground="White"
                   HorizontalAlignment="Left" Margin="0,20,0,0"/>
                        <Slider x:Name="sliderMusic" Minimum="0" Maximum="100" Value="50" ValueChanged="Slider_ValueChanged"/>
                    </StackPanel>
                    <Grid Grid.Row="2" Margin="0,10,0,20">
                        <Button Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}"
                            Width="180" Height="40" Click="Click_HideSettings" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Friends Grid -->
            <Grid x:Name="FriendsGrid" Width="700" Height="600" Background="#272727" HorizontalAlignment="Center"
          VerticalAlignment="Center" Visibility="Collapsed">

                <Grid.Resources>
                    <DataTemplate x:Key="FriendItemTemplate">
                        <StackPanel Orientation="Horizontal" Width="600" Background="Transparent" MouseLeftButtonUp="Click_OpenFriendProfile" Cursor="Hand">
                            <Image Source="{Binding ProfilePicturePath}" Width="30" Height="30" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Player.Username}" Width="450" VerticalAlignment="Center" Foreground="White"/>
                            <Button Content="{x:Static language:Lang.socialDeleteFriend}" Width="110" Click="Click_RemoveFriend"
                                Style="{StaticResource buttonCustomFocus}" FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate x:Key="RequestItemTemplate">
                        <StackPanel Orientation="Horizontal" Width="600">
                            <Image Source="{Binding ProfilePicturePath}" Width="30" Height="30" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Player.Username}" Width="350" VerticalAlignment="Center" Foreground="White" FontSize="16"/>
                            <Button Content="{x:Static language:Lang.socialAccept}" Width="90" Click="Click_AcceptRequest" Style="{StaticResource buttonCustomFocus}" Margin="0,0,10,0" FontSize="12"/>
                            <Button Content="{x:Static language:Lang.socialReject}" Width="90" Click="Click_RejectRequest" Style="{StaticResource buttonCustomFocus}" FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate x:Key="SearchItemTemplate">
                        <StackPanel Orientation="Horizontal" Width="600">
                            <Image Source="{Binding ProfilePicturePath}" Width="30" Height="30" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Player.Username}" Width="450" VerticalAlignment="Center" Foreground="White"/>
                            <Button Content="{x:Static language:Lang.socialAddFriend}" Width="110" Click="Click_SendRequest"
                                Visibility="{Binding ButtonVisibility}" Style="{StaticResource buttonCustomFocus}" FontSize="12"/>
                            <TextBlock Text="{x:Static language:Lang.friendPending}" Foreground="Gray" FontStyle="Italic"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" Width="110"
                                   Visibility="{Binding TextVisibility}"/>
                        </StackPanel>
                    </DataTemplate>
                </Grid.Resources>
                <Grid.RenderTransform>
                    <TranslateTransform Y="640"/>
                </Grid.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="{x:Static language:Lang.globalFriends}" Style="{StaticResource subtitle}"
                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20"/>
                    <Border Grid.Row="1" Background="#FF2D2D2D" Height="40" Margin="20,10,20,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SearchBox" Grid.Column="0" 
                     Text="{x:Static language:Lang.socialSearchForAFriend}" Style="{StaticResource textBoxCustomFocus}" 
                             HorizontalAlignment="Left" BorderThickness="0" VerticalContentAlignment="Center" Margin="15,0,0,0"
                             GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus" KeyDown="SearchBox_KeyDown"/>
                            <Button Grid.Column="1" Content="❌" Background="Transparent" BorderThickness="0"
                            Foreground="White" Width="30" Height="30" VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center" Margin="0,0,5,0" Click="Click_ClearSearchBox"/>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="2" Margin="20,15,20,20">
                        <ScrollViewer x:Name="FriendsAndRequestsView" Visibility="Visible">
                            <StackPanel>
                                <TextBlock Text="{x:Static language:Lang.socialRequests}" Margin="0,0,0,8" Foreground="White" FontWeight="Bold"/>
                                <ListView x:Name="RequestsList" ItemsSource="{Binding Requests}" Background="#2D2D2D" BorderThickness="0"
                                  Foreground="White" SelectionMode="Single"
                                  ItemTemplate="{StaticResource RequestItemTemplate}"/>
                                <TextBlock Text="{x:Static language:Lang.globalFriends}" Margin="0,20,0,8" Foreground="White" FontWeight="Bold"/>
                                <ListView x:Name="FriendsList" ItemsSource="{Binding Friends}" Height="360" Background="#2D2D2D" BorderThickness="0"
                                  Foreground="White" SelectionMode="Single"
                                  ItemTemplate="{StaticResource FriendItemTemplate}"/>
                            </StackPanel>
                        </ScrollViewer>
                        <StackPanel x:Name="SearchView" Visibility="Collapsed">
                            <TextBlock Text="{x:Static language:Lang.socialSearchResults}" Margin="0,0,0,8" Foreground="White" FontWeight="Bold"/>
                            <ListView x:Name="SearchResultsList" ItemsSource="{Binding SearchResults}" Height="360" Background="#2D2D2D" BorderThickness="0"
                              Foreground="White" SelectionMode="Single"
                              ItemTemplate="{StaticResource SearchItemTemplate}"/>
                        </StackPanel>
                    </Grid>
                    <Button Grid.Row="3" Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}"
                    Width="180" Height="40" HorizontalAlignment="Left" Margin="20,0,0,20" Click="Click_HideFriends"/>
                </Grid>
            </Grid>

            <!-- ScoreboardsGrid -->
            <Grid x:Name="ScoreboardsGrid" Width="800" Height="600" Background="#272727" 
  HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                <Grid.RenderTransform>
                    <TranslateTransform Y="640"/>
                </Grid.RenderTransform>

                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="{x:Static language:Lang.globalScoreboards}" 
           Style="{StaticResource subtitle}" Foreground="White" 
           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Name="Border" BorderThickness="0,0,0,3" BorderBrush="Transparent" Margin="10,0">
                                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" 
                                                  HorizontalAlignment="Center" ContentSource="Header" Margin="10,10"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="White"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="False">
                                                    <Setter Property="Foreground" Value="#888888"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>

                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#151515"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="15,10"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#333333"/>
                            </Style>

                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="0" 
                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <TabItem Header="{x:Static language:Lang.scoresMostWins}">
                            <DataGrid ItemsSource="{Binding TopWinsEntries}" AutoGenerateColumns="False" 
                      Background="Transparent" RowBackground="#333333" AlternatingRowBackground="#3A3A3A"
                      HeadersVisibility="Column" IsReadOnly="True" BorderThickness="0" 
                      Foreground="White" GridLinesVisibility="Horizontal" 
                      HorizontalGridLinesBrush="#555555" Margin="0,15,0,0"
                      CanUserSortColumns="False" CanUserResizeColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{x:Static language:Lang.mainMenuPlayer}" Binding="{Binding Username}" Width="*"/>
                                    <DataGridTextColumn Header="{x:Static language:Lang.scoresWins}" Binding="{Binding GamesWon}" Width="Auto" MinWidth="180"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="{x:Static language:Lang.scoresFastest}">
                            <DataGrid ItemsSource="{Binding TopBestTimeEntries}" AutoGenerateColumns="False" 
                      Background="Transparent" RowBackground="#333333" AlternatingRowBackground="#3A3A3A"
                      HeadersVisibility="Column" IsReadOnly="True" BorderThickness="0" 
                      Foreground="White" GridLinesVisibility="Horizontal" 
                      HorizontalGridLinesBrush="#555555" Margin="0,15,0,0"
                      CanUserSortColumns="False" CanUserResizeColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{x:Static language:Lang.mainMenuPlayer}" Binding="{Binding Username}" Width="*"/>
                                    <DataGridTextColumn Header="{x:Static language:Lang.scoresRecordTime}" Binding="{Binding FastestMatch}" Width="Auto" MinWidth="180"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="{x:Static language:Lang.scoresAssassins}">
                            <DataGrid ItemsSource="{Binding TopAssassinsEntries}" AutoGenerateColumns="False" 
                      Background="Transparent" RowBackground="#333333" AlternatingRowBackground="#3A3A3A"
                      HeadersVisibility="Column" IsReadOnly="True" BorderThickness="0" 
                      Foreground="White" GridLinesVisibility="Horizontal" 
                      HorizontalGridLinesBrush="#555555" Margin="0,15,0,0"
                      CanUserSortColumns="False" CanUserResizeColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{x:Static language:Lang.mainMenuPlayer}" Binding="{Binding Username}" Width="*"/>
                                    <DataGridTextColumn Header="{x:Static language:Lang.scoresAssassinsRevealed}" Binding="{Binding AssassinsRevealed}" Width="Auto" MinWidth="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}" 
                Width="180" Height="40" Margin="10" Click="Click_HideScoreboards"/>

                        <Button Content="{x:Static language:Lang.scoresMyScore}" Style="{StaticResource buttonCustomFocus}" 
                Width="180" Height="40" Margin="10" Click="Click_MyScore"/>

                        <Button Content="{x:Static language:Lang.scoresRefresh}" Style="{StaticResource buttonCustomFocus}" 
                Width="180" Height="40" Margin="10" Click="Click_RefreshScoreboard"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Viewbox>
</Page>