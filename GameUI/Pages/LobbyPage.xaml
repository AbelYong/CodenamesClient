<Page x:Class="CodenamesClient.GameUI.Pages.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodenamesClient.GameUI.Pages"
      xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
      xmlns:viewmodels="clr-namespace:CodenamesClient.GameUI.ViewModels"
      xmlns:uc="clr-namespace:CodenamesClient.GameUI.Pages.UserControls"
      d:DataContext="{d:DesignInstance Type=viewmodels:LobbyViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1024" Background="#FF1D1D1D"
      Title="LobbyPage"
      HorizontalAlignment="Center" VerticalAlignment="Center">

    <Page.Resources>
        <DataTemplate x:Key="OnlineFriendItemTemplate">
            <StackPanel Orientation="Horizontal" Width="300">
                <Image Source="/Assets/BoardUI/Agents/agent01.png" Width="30" Height="30" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Username}" Width="150" VerticalAlignment="Center" Foreground="White"/>
                <Button Content="Invite" Width="90" Click="Click_InviteFriend"/>
            </StackPanel>
        </DataTemplate>

        <Storyboard x:Key="SlideInOnlineFriendsAnimation">
            <DoubleAnimation Storyboard.TargetName="OnlineFriendsGrid"
                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                         From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutOnlineFriendsAnimation">
            <DoubleAnimation Storyboard.TargetName="OnlineFriendsGrid"
                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                         From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideInLobbyCodeAnimation">
            <DoubleAnimation Storyboard.TargetName="gridTypeCode"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                 From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutLobbyCodeAnimation">
            <DoubleAnimation Storyboard.TargetName="gridTypeCode"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                 From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <DockPanel LastChildFill="True">

            <Button Click="Click_ReturnToLobby" DockPanel.Dock="Top" 
                    Style="{StaticResource imageButtonFocus}" Height="50" Width="50" HorizontalAlignment="Right">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/GameUI/returnArrow.png"/>
                </Button.Background>

            </Button>
            <StackPanel DockPanel.Dock="Left" Margin="0,0,30,0">
                <Label Content="{Binding GamemodeName}" Style="{StaticResource title}"
                   FontSize="28" FontWeight="Normal"/>
                <Label Content="{x:Static language:Lang.lobbyRules}" Width="375" Style="{StaticResource subtitle}" 
                   HorizontalContentAlignment="Center" BorderThickness="2" 
BorderBrush="White"/>
                <Grid Margin="0,0,0,100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="{x:Static language:Lang.matchTimerTokens}"
                       Style="{StaticResource subtitle}"  HorizontalAlignment="Left" />
                    <Label Grid.Row="1" 
Grid.Column="0" Content="{x:Static language:Lang.matchBystanderTokens}" 
                       Style="{StaticResource subtitle}" HorizontalAlignment="Left" />
                    <Label Grid.Row="2" Grid.Column="0" Content="{x:Static language:Lang.matchTurnTimer}" 
                       Style="{StaticResource subtitle}" HorizontalAlignment="Left" />

                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TimerTokens}"
                         Style="{StaticResource textBoxCustomFocus}" HorizontalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding !IsCustomGame}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding BystanderTokens}" 
                         Style="{StaticResource textBoxCustomFocus}" HorizontalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding !IsCustomGame}"/>

                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TurnTimer}" 
                         Style="{StaticResource textBoxCustomFocus}" HorizontalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding !IsCustomGame}"/>
                </Grid>
                <Button Click="Click_StartGame" Content="{x:Static language:Lang.globalPlay}" IsEnabled="{Binding PlayBtnEnabled}" Visibility="{Binding PlayBtnVisibility}"
                    Style="{StaticResource buttonCustomFocus}" Height="75" FontSize="48" Margin="0,0,0,25"/>
                <ToggleButton IsChecked="{Binding IsReadyOrCancelTgBtnActive}" Content="{Binding ReadyOrCancelTgBtnContent}" Style="{StaticResource toggleButtonCustomFocus}" Visibility="{Binding ReadyOrCancelTgBtnVisibility}"
                        Height="75" FontSize="48" Margin="0,0,0,25"/>
                <Button Click="Click_btnCreateLobby" Content="Create lobby" Visibility="{Binding CreateLobbyBtnVisbility}"
                        Style="{StaticResource buttonCustomFocus}" Height="75" FontSize="36"/>
                <Label Content="{Binding VisibleLobbyCodeTag}" Style="{StaticResource subtitle}" Width="300" Height="40" />

            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Margin="30,0,0,0" Width="200">
                <Label Content="{x:Static language:Lang.matchParty}"
                   Style="{StaticResource title}" />
                <Label Content="{Binding PartyHost.Username}" Height="40" HorizontalContentAlignment="Center"
                       Style="{StaticResource subtitle}" Background="White" BorderBrush="White" Foreground="Black" BorderThickness="2" Margin="0,0,0,10" Width="200"/>
                <Button x:Name="btnGuest" Content="{Binding PartyGuest.Username}" Visibility="{Binding GuestBtnVisibility}"
                        Style="{StaticResource buttonCustomFocus}" FontSize="24" Margin="0,0,0,10" Height="40" />

                <Button x:Name="btnInvite" Content="Invite+" Visibility="{Binding InviteBtnVisibility}"
                    Style="{StaticResource buttonCustomFocus}" Height="40" Margin="0,0,0,10"
                    Click="Click_ShowOnlineFriends"/>
                <Button x:Name="btnJoinWithCode" Content="Join" Visibility="{Binding JoinBtnVisibility}"
                    Style="{StaticResource buttonCustomFocus}" Height="40" 
                    Click="Click_btnJoinParty"/>

            </StackPanel>
            <Image Source="/Assets/GameUI/agent.png" Height="450"/>
        </DockPanel>

        <Border x:Name="Overlay" Visibility="Collapsed" Background="#80000000" />

        <Grid x:Name="OnlineFriendsGrid" Width="400" Height="500" Background="#272727" 
              HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Grid.RenderTransform>
                <TranslateTransform Y="640"/>
            </Grid.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Online Friends" 
                       Style="{StaticResource subtitle}" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,20,0,20"/>

                <ListView Grid.Row="1" x:Name="OnlineFriendsList" 
                          ItemsSource="{Binding OnlineFriends}" 
                          Background="#2D2D2D" BorderThickness="0"
                          Foreground="White" SelectionMode="Single"
                          ItemTemplate="{StaticResource OnlineFriendItemTemplate}"
                          Margin="20,0,20,20"/>

                <Button Grid.Row="2" Content="{x:Static language:Lang.globalBack}" 
                        Style="{StaticResource buttonCustomFocus}"
                        Width="180" Height="40" Margin="0,0,0,20" 
                        Click="Click_HideOnlineFriends"/>
            </Grid>
        </Grid>
        <Grid x:Name="gridTypeCode" Width="400" Height="200" Background="#272727"
              HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Grid.RenderTransform>
                <TranslateTransform Y="640"/>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Type the match code: " Style="{StaticResource subtitle}" Margin="0,0,0,10" />
            <TextBox Grid.Row="1" x:Name="tbkInputCode" Style="{StaticResource textBoxCustomFocus}" Width="300" Margin="0,0,0,20" />
            <Button Grid.Row="2" Click="Click_btnSendCode" Content="Send code" Margin="0,0,0,10"
                    Style="{StaticResource buttonCustomFocus}" Width="300" Height="40" FontSize="20" />
            <Button Grid.Row="3" Click="Click_btnCloseTypeCode" Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}" Width="300" Height="40" FontSize="20" />
        </Grid>
    </Grid>
</Page>