<UserControl x:Class="CodenamesClient.GameUI.Pages.UserControls.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodenamesClient.GameUI.Pages.UserControls"
             xmlns:viewmodels="clr-namespace:CodenamesClient.GameUI.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ProfileViewModel}"
             xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
             mc:Ignorable="d" 
             Height="450" Width="600" Background="#FF1D1D1D">
    <UserControl.Resources>
        
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetName="gridProfilePictures"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetName="gridProfilePictures"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideInAuthenticateAnimation">
            <DoubleAnimation Storyboard.TargetName="gridAuthenticate"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutAuthenticateAnimation">
            <DoubleAnimation Storyboard.TargetName="gridAuthenticate"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="0" To="800" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideInVerifyAnimation">
            <DoubleAnimation Storyboard.TargetName="gridVerify"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutVerifyAnimation">
            <DoubleAnimation Storyboard.TargetName="gridVerify"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="800" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideInResetPasswordAnimation">
            <DoubleAnimation Storyboard.TargetName="gridResetPassword"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutResetPasswordAnimation">
            <DoubleAnimation Storyboard.TargetName="gridResetPassword"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                     From="0" To="800" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Style x:Key="ChecklistItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Tomato"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                    <Setter Property="Foreground" Value="LimeGreen"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <ControlTemplate x:Key="BelowTextValidationTemplate">
            <DockPanel LastChildFill="True">
                <TextBlock Margin="0,4,0,0" Foreground="Tomato" FontSize="12" TextWrapping="Wrap" DockPanel.Dock="Bottom"
                   Text="{Binding ElementName=adorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"/>
                <AdornedElementPlaceholder x:Name="adorner"/>
            </DockPanel>
        </ControlTemplate>
        <Style x:Key="ValidatedTextBox" TargetType="TextBox" BasedOn="{StaticResource textBoxCustomFocus}">
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource BelowTextValidationTemplate}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="360"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Tomato"/>
                    <Setter Property="ToolTip" Value="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel x:Name="stackPanelProfileForm">
            <Label Content="{x:Static language:Lang.profileProfile}" Style="{StaticResource title}" />
            <Button x:Name="btnProfilePicture" Click="Click_btnProfilePicture" Content="" Style="{StaticResource imageButtonFocus}" Width="75" Height="75">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent01.png"/>
                </Button.Background>
            </Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="0,0,50,0" Width="200">
                    <Label Content="{x:Static language:Lang.globalUsername}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxUsername" Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="20"/>
                    <Label Content="{x:Static language:Lang.profileEmail}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxEmail" Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16"/>
                    <Label Content="{x:Static language:Lang.profileName}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxName"  Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="20"/>
                    <Label Content="{x:Static language:Lang.profileLastName}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxLastName" Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Button Click="Click_btnBack" Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}" Width="100" Margin="0,30,0,0" />
                </StackPanel>
                <StackPanel Margin="50,0,0,0" Width="200">
                    <Label x:Name="lblPassword" Content="{x:Static language:Lang.loginPassword}" Style="{StaticResource normal}" />
                    <Button Name="tBxChangePassword" Click="Click_btnResetPassword" Content="{x:Static language:Lang.resetChangePassword}"
                            Style="{StaticResource buttonCustomFocus}" FontSize="16"/>
                    <Label Content="Facebook" Style="{StaticResource normal}" />
                    <TextBox Name="tBxFacebook" Text="" 
                            Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Label Content="Instagram" Style="{StaticResource normal}" />
                    <TextBox Name="tBxInstagram" Text=""
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Label Content="Discord" Style="{StaticResource normal}" />
                    <TextBox Name="tBxDiscord"  Text=""
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>

                    <Button x:Name="btnSave" Click="Click_btnSave" Content="{x:Static language:Lang.globalSave}" Style="{StaticResource buttonCustomFocus}" Width="100" Margin="0,30,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
