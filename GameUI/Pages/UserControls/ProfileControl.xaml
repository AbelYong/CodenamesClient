                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Assassins/assassin03.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid x:Name="gridAuthenticate"
              Width="540" Height="275"
              Background="#272727"
              Visibility="Visible"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Panel.ZIndex="10">
            <Grid.RenderTransform>
                <TranslateTransform Y="640"/>
            </Grid.RenderTransform>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Autenticación Requerida"
                       Style="{StaticResource title}" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Esta operación es sensible"
                       Style="{StaticResource subtitle}" Margin="0,0,0,10"/>
                    <TextBlock Text="Por favor ingresa tu contraseña actual" Margin="0,0,0,10"
                               Style="{StaticResource normal}"/>
                    <TextBox Text="{Binding CurrentPassword}"
                             Style="{StaticResource textBoxCustomFocus}" Margin="0,2,0,8" Width="320" Height="30" MaxLength="16" HorizontalContentAlignment="Center"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{x:Static language:Lang.globalCancel}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                    Click="Click_btnCancelAuthentication"/>
                    <Button Grid.Column="1" Content="{x:Static language:Lang.globalConfirm}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                    Click="Click_btnAuthenticate"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="gridVerify"
          Width="540" Height="300"
          Background="#272727"
          Visibility="Collapsed"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Panel.ZIndex="10">
            <Grid.RenderTransform>
                <TranslateTransform Y="640"/>
            </Grid.RenderTransform>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                   Content="{x:Static language:Lang.loginVerifyEmail}"
                   Style="{StaticResource subtitle}" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,10"/>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="{x:Static language:Lang.loginCode6DigitsSent}" Style="{StaticResource normal}"/>
                    <TextBlock x:Name="VerifyEmailLabel" Text="{Binding EmailVerification}" Style="{StaticResource normal}" FontWeight="Bold" Margin="0,0,0,8"/>

                    <TextBlock Text="{x:Static language:Lang.loginVerificationCode}" Style="{StaticResource normal}"/>
                    <TextBox x:Name="tbxVerifyCode" Style="{StaticResource textBoxCustomFocus}" Margin="0,2,0,8" Width="320" MaxLength="6"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{x:Static language:Lang.globalCancel}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                        Click="Click_btnHideVerify"/>
                    <Button Grid.Column="1" Content="{x:Static language:Lang.globalConfirm}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                        Click="Click_btnConfirmVerify"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="gridResetPassword"
              Width="540" Height="300"
              Background="#272727"
              Visibility="Collapsed"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Panel.ZIndex="10">
            <Grid.RenderTransform>
                <TranslateTransform Y="640"/>
            </Grid.RenderTransform>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Cambiar contraseña"
                       Style="{StaticResource subtitle}" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,10"/>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="Ingresa la nueva contraseña"
                               Style="{StaticResource normal}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" FontSize="16" LostFocus="PasswordInput_LostFocus"
                                 Style="{StaticResource ValidatedTextBox}" Margin="0,2,60,25" Height="30" Width="320" MaxLength="16" HorizontalAlignment="Right" HorizontalContentAlignment="Center" />
                        <Border Grid.Column="1" Margin="0,0,0,20" Background="#444" CornerRadius="15" Width="30" Height="30" Cursor="Hand" BorderBrush="Gray" BorderThickness="1" ToolTipService.InitialShowDelay="0" ToolTipService.ShowDuration="10000">
                            <TextBlock Text="?" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="18"/>
                            <Border.ToolTip>
                                <ToolTip Background="#222" BorderBrush="Gray" HasDropShadow="True">
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{x:Static language:Lang.signInPasswordRequirements}" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                                        <TextBlock Style="{StaticResource ChecklistItemStyle}" Tag="{Binding PwHasMinLength}" Text="{Binding PwMinLengthText}"/>
                                        <TextBlock Style="{StaticResource ChecklistItemStyle}" Tag="{Binding PwWithinMaxLength}" Text="{Binding PwMaxLengthText}"/>
                                        <TextBlock Style="{StaticResource ChecklistItemStyle}" Tag="{Binding PwHasUpper}" Text="{x:Static language:Lang.signInPasswordAtLeastOneUppercaseLetter}"/>
                                        <TextBlock Style="{StaticResource ChecklistItemStyle}" Tag="{Binding PwHasLower}" Text="{x:Static language:Lang.signInPasswordAtLeastOneLowercaseLetter}"/>
                                        <TextBlock Style="{StaticResource ChecklistItemStyle}" Tag="{Binding PwHasDigit}" Text="{x:Static language:Lang.signInPasswordAtLeastOneDigit}"/>
                                        <TextBlock Style="{StaticResource ChecklistItemStyle}" Tag="{Binding PwHasSpecial}" Text="{x:Static language:Lang.signInPasswordAtLeastOneSpecialCharacter}"/>
                                        <TextBlock Style="{StaticResource ChecklistItemStyle}" Tag="{Binding PwNoConsecutiveRun}" Text="{x:Static language:Lang.signInPasswordNotContainMoreThan3ConsecutiveDigits}"/>
                                    </StackPanel>
                                </ToolTip>
                            </Border.ToolTip>
                        </Border>
                    </Grid>
                    <TextBlock Text="Confirma tu nueva contraseña" Style="{StaticResource normal}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding ConfirmPassword, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                                 Style="{StaticResource ValidatedTextBox}" Margin="0,2,90,20" Width="320" Height="30" MaxLength="16" HorizontalAlignment="Right" HorizontalContentAlignment="Center" />
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{x:Static language:Lang.globalCancel}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                            Click="Click_btnHideResetPassword"/>
                    <Button Grid.Column="1" Content="{x:Static language:Lang.globalConfirm}" IsEnabled="{Binding CanSubmit}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                            Click="Click_btnConfirmResetPassword"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>