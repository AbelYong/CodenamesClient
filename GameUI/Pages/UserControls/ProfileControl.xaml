<UserControl x:Class="CodenamesClient.GameUI.Pages.UserControls.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodenamesClient.GameUI.Pages.UserControls"
             xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
             mc:Ignorable="d" 
             Height="450" Width="600" Background="#FF1D1D1D">
    <UserControl.Resources>
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetName="gridProfilePictures"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetName="gridProfilePictures"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="640" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideInVerifyAnimation">
            <DoubleAnimation Storyboard.TargetName="gridVerify"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="640" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideOutVerifyAnimation">
            <DoubleAnimation Storyboard.TargetName="gridVerify"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="800" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <StackPanel x:Name="stackPanelProfileForm">
            <Label Content="{x:Static language:Lang.profileProfile}" Style="{StaticResource title}" />
            <Button x:Name="btnProfilePicture" Click="Click_btnProfilePicture" Content="" Style="{StaticResource imageButtonFocus}" Width="75" Height="75">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent01.png"/>
                </Button.Background>
            </Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="0,0,50,0" Width="200">
                    <Label Content="{x:Static language:Lang.globalUsername}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxUsername" Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="20"/>
                    <Label Content="{x:Static language:Lang.profileEmail}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxEmail" Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16"/>
                    <Label Content="{x:Static language:Lang.profileName}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxName"  Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="20"/>
                    <Label Content="{x:Static language:Lang.profileLastName}" Style="{StaticResource normal}" />
                    <TextBox Name="tBxLastName" Text="" 
                 Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Button Click="Click_btnBack" Content="{x:Static language:Lang.globalBack}" Style="{StaticResource buttonCustomFocus}" Width="100" Margin="0,30,0,0" />
                </StackPanel>
                <StackPanel Margin="50,0,0,0" Width="200">
                    <Label x:Name="lblPassword" Content="{x:Static language:Lang.loginPassword}" Style="{StaticResource normal}" />
                    <Button Name="tBxChangePassword"  Content="{x:Static language:Lang.resetChangePassword}" 
                    Style="{StaticResource buttonCustomFocus}" FontSize="16" IsEnabled="False" />
                    <Label Content="Facebook" Style="{StaticResource normal}" />
                    <TextBox Name="tBxFacebook" Text="" 
                            Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Label Content="Instagram" Style="{StaticResource normal}" />
                    <TextBox Name="tBxInstagram" Text=""
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>
                    <Label Content="Discord" Style="{StaticResource normal}" />
                    <TextBox Name="tBxDiscord"  Text=""
                             Style="{StaticResource textBoxCustomFocus}" FontSize="16" MaxLength="30"/>

                    <Button x:Name="btnSave" Click="Click_btnSave" Content="{x:Static language:Lang.globalSave}" Style="{StaticResource buttonCustomFocus}" Width="100" Margin="0,30,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Grid x:Name="gridProfilePictures" Visibility="Collapsed" Background="#272727" Margin="30,30,30,30">
            <Grid.RenderTransform>
                <TranslateTransform Y="0"/>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent01.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="0" Grid.Column="1" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent02.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="0" Grid.Column="2" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent03.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="0" Grid.Column="3" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent04.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="0" Grid.Column="4" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent05.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="1" Grid.Column="0" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent06.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="1" Grid.Column="1" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent07.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="1" Grid.Column="2" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent08.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="1" Grid.Column="3" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent09.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="1" Grid.Column="4" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent10.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="2" Grid.Column="0" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent11.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="2" Grid.Column="1" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent12.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="2" Grid.Column="2" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent13.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="2" Grid.Column="3" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent14.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="2" Grid.Column="4" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Agents/agent15.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="3" Grid.Column="0" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Neutrals/neutral01.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="3" Grid.Column="1" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Neutrals/neutral02.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="3" Grid.Column="2" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Neutrals/neutral03.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="3" Grid.Column="3" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Neutrals/neutral04.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="3" Grid.Column="4" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Neutrals/neutral05.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="4" Grid.Column="0" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Neutrals/neutral06.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="4" Grid.Column="1" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Neutrals/neutral07.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="4" Grid.Column="2" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Assassins/assassin01.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="4" Grid.Column="3" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Assassins/assassin02.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="4" Grid.Column="4" Click="Click_btnSelectProfilePicture"  Content="" Style="{StaticResource imageButtonFocus}" Margin="0,10,0,0" Height="50" Width="88" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/BoardUI/Assassins/assassin03.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid x:Name="gridVerify"
          Width="540" Height="300"
          Background="#272727"
          Visibility="Collapsed"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Panel.ZIndex="10">
            <Grid.RenderTransform>
                <TranslateTransform Y="640"/>
            </Grid.RenderTransform>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                   Content="{x:Static language:Lang.loginVerifyEmail}"
                   Style="{StaticResource subtitle}" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,10"/>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="{x:Static language:Lang.loginCode6DigitsSent}" Style="{StaticResource normal}"/>
                    <TextBlock x:Name="VerifyEmailLabel" Style="{StaticResource normal}" FontWeight="Bold" Margin="0,0,0,8"/>

                    <TextBlock Text="{x:Static language:Lang.loginVerificationCode}" Style="{StaticResource normal}"/>
                    <TextBox x:Name="tbxVerifyCode" Style="{StaticResource textBoxCustomFocus}" Margin="0,2,0,8" Width="320" MaxLength="6"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{x:Static language:Lang.globalCancel}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                        Click="Click_btnHideVerify"/>
                    <Button Grid.Column="1" Content="{x:Static language:Lang.globalConfirm}" Style="{StaticResource buttonCustomFocus}" Width="180" Height="40"
                        Click="Click_btnConfirmVerify"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>