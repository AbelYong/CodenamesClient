<Page x:Class="CodenamesClient.GameUI.BoardUI.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodenamesClient.GameUI.BoardUI"
      xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
      xmlns:viewmodels="clr-namespace:CodenamesClient.GameUI.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:BoardViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1024"
      Title="BoardPage" Background="#FF1D1D1D"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <DataTemplate x:Key="ChatMessageTemplate">
            <Border CornerRadius="10" Padding="10,5" Margin="5">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMine}" Value="True">
                                <Setter Property="Background" Value="#DCF8C6"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding Message}" Foreground="Black" TextWrapping="Wrap" MaxWidth="250" FontSize="14"/>
            </Border>
        </DataTemplate>

        <Storyboard x:Key="SlideInGameOver">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="640" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Viewbox Stretch="Uniform">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10" Width="1024" Height="640">
            <DockPanel LastChildFill="False">
                <Grid DockPanel.Dock="Top" MinHeight="150">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="365"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                        <TextBlock local:TextAnimator.AnimatedText="{Binding PlayerSTurn}" Focusable="False"
                                   Style="{StaticResource title}" TextWrapping="Wrap" TextAlignment="Center" Foreground="White" />
                        <TextBlock local:TextAnimator.AnimatedText="{Binding TurnInstructions}" IsEnabled="False"
                                   Style="{StaticResource subtitle}" TextWrapping="Wrap" TextAlignment="Center" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Label Content="{x:Static language:Lang.matchYourkeycard}"
                               Style="{StaticResource subtitle}" Foreground="White" />
                        <Grid x:Name="gridKeycard" MinHeight="130" MinWidth="200" Margin="50,0,50,0" Background="DarkGray">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" Grid.Column="0" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="0" Grid.Column="1" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="0" Grid.Column="2" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="0" Grid.Column="3" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="0" Grid.Column="4" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="1" Grid.Column="0" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="1" Grid.Column="1" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="1" Grid.Column="2" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="1" Grid.Column="3" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="1" Grid.Column="4" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="2" Grid.Column="0" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="2" Grid.Column="1" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="2" Grid.Column="2" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="2" Grid.Column="3" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="2" Grid.Column="4" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="3" Grid.Column="0" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="3" Grid.Column="1" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="3" Grid.Column="2" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="3" Grid.Column="3" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="3" Grid.Column="4" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="4" Grid.Column="0" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="4" Grid.Column="1" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="4" Grid.Column="2" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="4" Grid.Column="3" Stroke="White" StrokeThickness="1"/>
                            <Rectangle Grid.Row="4" Grid.Column="4" Stroke="White" StrokeThickness="1"/>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="{x:Static language:Lang.matchChronometer}" Style="{StaticResource subtitle}" Foreground="White" Margin="0,0,25,0" />
                                <TextBlock Text="{Binding ElapsedTime, StringFormat='mm\\:ss'}" Style="{StaticResource subtitle}" Foreground="White" HorizontalAlignment="Center" />
                            </StackPanel>
                            <Button Click="Click_QuitMatch" Style="{StaticResource imageButtonFocus}" MinHeight="60" MinWidth="125">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Assets/BoardUI/exit.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                        <Label Content="{Binding MyUsername}" Height="40" MinWidth="255" Width="110" HorizontalContentAlignment="Center" 
                   Style="{StaticResource subtitle}" Background="Beige" BorderBrush="DarkGray" Foreground="Black" BorderThickness="2" Margin="0,10,0,10"/>
                        <Button Content="{Binding CompanionUsername}" MaxWidth="255" FontSize="24" Height="40" Style="{StaticResource buttonCustomFocus}"
                    Background="Khaki" BorderBrush="DarkGray" Foreground="Black" BorderThickness="2" 
                    Click="Click_ReportPlayer" ToolTip="Reportar jugador"/>
                    </StackPanel>
                </Grid>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                    <Grid VerticalAlignment="Center">
                        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Border DockPanel.Dock="Top" Background="#222222" CornerRadius="10" Margin="0,0,0,0" Padding="10" HorizontalAlignment="Center" Width="220">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Grid Margin="0,0,15,0">
                                        <Ellipse x:Name="LightAgent" Width="30" Height="30" Fill="#003300" Stroke="Gray" StrokeThickness="2"/>
                                        <Ellipse x:Name="LightAgentOn" Width="30" Height="30" Fill="#00FF00" Opacity="0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Grid>

                                    <Grid Margin="15,0,15,0">
                                        <Ellipse x:Name="LightBystander" Width="30" Height="30" Fill="#333333" Stroke="Gray" StrokeThickness="2"/>
                                        <Ellipse x:Name="LightBystanderOn" Width="30" Height="30" Fill="White" Opacity="0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Grid>

                                    <Grid Margin="15,0,0,0">
                                        <Ellipse x:Name="LightAssassin" Width="30" Height="30" Fill="#330000" Stroke="Gray" StrokeThickness="2"/>
                                        <Ellipse x:Name="LightAssassinOn" Width="30" Height="30" Fill="Red" Opacity="0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <StackPanel Background="#333333" DockPanel.Dock="Bottom" Margin="10,10,10,10">
                                <Label Content="Cross-Talker™" Style="{StaticResource normal}" FontSize="20" Foreground="Gray" />
                                <ListView Height="250" Background="#225E08"  ItemsSource="{Binding ChatMessages}" Margin="10,10,10,10"
                                          ItemTemplate="{StaticResource ChatMessageTemplate}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,0,10,10">
                                    <TextBox Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsChatEnabled}"
                                             FontSize="16" FontFamily="Consolas" FontStyle="Italic"
                                             Width="125" MaxLength="30" MaxLines="1" VerticalContentAlignment="Center" 
                                             KeyDown="KeyDown_ChatInput">
                                    </TextBox>
                                    <Button MinWidth="40" MinHeight="30" Style="{StaticResource imageButtonFocus}" Margin="30,0,0,0" Click="Click_SendMessage" IsEnabled="{Binding IsChatEnabled}">
                                        <Button.Background>
                                            <ImageBrush ImageSource="/Assets/BoardUI/sendIcon.png"/>
                                        </Button.Background>
                                    </Button>
                                </StackPanel>
                            </StackPanel>

                        </DockPanel>
                    </Grid>

                    <Grid x:Name="gridBoard" MinWidth="550" MinHeight="450" Margin="10,0,30,0" IsEnabled="{Binding IsBoardEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ToggleButton Grid.Row="0" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="0" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="0" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="0" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="0" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>

                        <ToggleButton Grid.Row="1" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="1" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="1" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="1" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="1" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>

                        <ToggleButton Grid.Row="2" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="2" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="2" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="2" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="2" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>

                        <ToggleButton Grid.Row="3" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="3" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="3" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="3" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="3" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>

                        <ToggleButton Grid.Row="4" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="4" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="4" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="4" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                        <ToggleButton Grid.Row="4" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" FontFamily="Consolas" Background="Beige" Margin="3"/>
                    </Grid>

                    <StackPanel VerticalAlignment="Center">
                        <Label Content="{x:Static language:Lang.matchTimer}" Style="{StaticResource subtitle}" Foreground="White" />
                        <Label Content="{Binding TurnTimer, StringFormat='s{0}'}" Style="{StaticResource title}" Foreground="White" />
                        <Label Content="{x:Static language:Lang.matchTimerTokens}" Style="{StaticResource normal}" FontSize="18" Foreground="White"/>
                        <Label Content="{Binding TimerTokens, StringFormat='x{0}'}" Background="Gray" MinWidth="100" MinHeight="50"
                               Style="{StaticResource title}" Foreground="Black" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" />
                        <Label Content="{x:Static language:Lang.matchBystanderTokens}" Style="{StaticResource normal}" FontSize="18" Foreground="White"/>
                        <Label Content="{Binding BystanderTokens, StringFormat='x{0}'}" Background="Khaki"  MinWidth="100" MinHeight="50"
                               Style="{StaticResource title}" Foreground="Black" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom"/>

                        <Button Content="{x:Static language:Lang.matchSkipTurn}"
                                Visibility="{Binding IsSkipButtonVisible, Converter={StaticResource BoolToVis}}"
                                Click="Click_SkipTurn"
                                Style="{StaticResource buttonCustomFocus}"
                                Margin="0,20,0,0" Height="40" Background="Orange" Foreground="White"/>
                        <Button Content="{x:Static language:Lang.matchCheckOnCompanion}"
                                Click="ClickCheckOnCompanion"
                                Style="{StaticResource buttonCustomFocus}"
                                Margin="0,20,0,0" Height="40" Background="DarkOrange"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
            <Image x:Name="BrokenScreenImage" Source="/Assets/BoardUI/brokenScreen.png" Visibility="Collapsed"
                       Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsHitTestVisible="False"/>
            <Grid x:Name="GameOverContainer" Visibility="{Binding IsGameOverVisible, Converter={StaticResource BoolToVis}}">
                <Border Background="{Binding OverlayColor}" />
                <Grid x:Name="GameOverGrid" Width="500" Height="500" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RenderTransform>
                        <TranslateTransform Y="640"/>
                    </Grid.RenderTransform>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGameOverVisible}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource SlideInGameOver}"/>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Border Background="#272727" CornerRadius="10" BorderBrush="White" BorderThickness="2">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

                            <Label Content="{Binding GameOverTitle}" 
                                   Foreground="White" FontSize="40" FontFamily="Consolas" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                            <Image Source="{Binding GameOverImageSource}" 
                                   Visibility="{Binding ShowAssassinImage, Converter={StaticResource BoolToVis}}"
                                   Height="200" Width="150" Stretch="Uniform" Margin="0,0,0,20">
                                <Image.Effect>
                                    <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0"/>
                                </Image.Effect>
                            </Image>

                            <TextBlock Text="{Binding GameOverMessage}" 
                                       Foreground="LightGray" FontSize="18" TextWrapping="Wrap" 
                                       TextAlignment="Center" Margin="0,0,0,30" MaxWidth="400"/>

                            <Button Content="{x:Static language:Lang.mainMenuQuit}" 
                                    Click="Click_QuitMatch"
                                    Style="{StaticResource buttonCustomFocus}" 
                                    Width="200" Height="50" FontSize="20"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Viewbox>
</Page>