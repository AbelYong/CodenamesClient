<Page x:Class="CodenamesClient.GameUI.BoardUI.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodenamesClient.GameUI.BoardUI"
      xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
      xmlns:viewmodels="clr-namespace:CodenamesClient.GameUI.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:BoardViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1024"
      Title="BoardPage" Background="LightGray">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,10,0">
        <DockPanel LastChildFill="False">
            <!-- Instructions, keycard and party-->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" MinHeight="150">
                <!-- Turn stackpanel-->
                <StackPanel MinWidth="365" HorizontalAlignment="Left">
                    <Label Content="Player's turn"
                           Style="{StaticResource title}" Foreground="Black" />
                    <TextBlock Text="Instructions" IsEnabled="False"
                               Style="{StaticResource subtitle}" Foreground="Black"/>
                </StackPanel>
                <!-- Keycard stackpanel-->
                <StackPanel>
                    <Label Content="Your keycard"
                           Style="{StaticResource subtitle}" Foreground="Black" />
                    <Grid x:Name="gridKeycard" MinHeight="150" MinWidth="250" Margin="50,0,50,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!-- first row-->
                        <Rectangle Grid.Row="0" Grid.Column="0" Fill="Beige" />
                        <Rectangle Grid.Row="0" Grid.Column="1" Fill="Beige" />
                        <Rectangle Grid.Row="0" Grid.Column="2" Fill="Beige" />
                        <Rectangle Grid.Row="0" Grid.Column="3" Fill="Beige" />
                        <Rectangle Grid.Row="0" Grid.Column="4" Fill="Beige" />
                        <!-- second row-->
                        <Rectangle Grid.Row="1" Grid.Column="0" Fill="Beige" />
                        <Rectangle Grid.Row="1" Grid.Column="1" Fill="Beige" />
                        <Rectangle Grid.Row="1" Grid.Column="2" Fill="Beige" />
                        <Rectangle Grid.Row="1" Grid.Column="3" Fill="Beige" />
                        <Rectangle Grid.Row="1" Grid.Column="4" Fill="Beige" />
                        <!-- third row-->
                        <Rectangle Grid.Row="2" Grid.Column="0" Fill="Beige" />
                        <Rectangle Grid.Row="2" Grid.Column="1" Fill="Beige" />
                        <Rectangle Grid.Row="2" Grid.Column="2" Fill="Beige" />
                        <Rectangle Grid.Row="2" Grid.Column="3" Fill="Beige" />
                        <Rectangle Grid.Row="2" Grid.Column="4" Fill="Beige" />
                        <!-- forth row-->
                        <Rectangle Grid.Row="3" Grid.Column="0" Fill="Beige" />
                        <Rectangle Grid.Row="3" Grid.Column="1" Fill="Beige" />
                        <Rectangle Grid.Row="3" Grid.Column="2" Fill="Beige" />
                        <Rectangle Grid.Row="3" Grid.Column="3" Fill="Beige" />
                        <Rectangle Grid.Row="3" Grid.Column="4" Fill="Beige" />
                        <!-- fifth row-->
                        <Rectangle Grid.Row="4" Grid.Column="0" Fill="Beige" />
                        <Rectangle Grid.Row="4" Grid.Column="1" Fill="Beige" />
                        <Rectangle Grid.Row="4" Grid.Column="2" Fill="Beige" />
                        <Rectangle Grid.Row="4" Grid.Column="3" Fill="Beige" />
                        <Rectangle Grid.Row="4" Grid.Column="4" Fill="Beige" />
                    </Grid>
                </StackPanel>
                <!-- Party stackpanel-->
                <StackPanel MinWidth="255" HorizontalAlignment="Right">
                    <Button Click="Click_QuitMatch" Style="{StaticResource imageButtonFocus}" Height="50" Width="150">
                        <Button.Background>
                            <ImageBrush ImageSource="/Assets/BoardUI/exit.png"/>
                        </Button.Background>
                    </Button>
                    <Label Content="Party"
                           Style="{StaticResource title}" Foreground="Black" />
                    <Label Content="Player" Height="40" MinWidth="255" Width="110" HorizontalContentAlignment="Center" 
                           Style="{StaticResource subtitle}" Background="Khaki" BorderBrush="Black" Foreground="Black" BorderThickness="2" Margin="0,0,0,10"/>
                    <Button Content="Friend" FontSize="24" Height="40"
                            Style="{StaticResource buttonCustomFocus}" Background="Beige" BorderBrush="Black" Foreground="Black" BorderThickness="2" Margin="0,0,0,10" />
                </StackPanel>
            </StackPanel>
            <!-- Chat, board and tokens-->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                <!-- Chat grid-->
                <Grid Background="#333333" VerticalAlignment="Center">
                    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <StackPanel DockPanel.Dock="Top" Margin="10,10,10,10">
                            <Label Content="Cross-Talker™" Style="{StaticResource normal}"/>
                            <ListView Height="290" Background="#225E08"/>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,0,10,10">
                            <TextBox Text="Type a clue" FontStyle="Italic" MinWidth="150" VerticalContentAlignment="Center" >
                            </TextBox>
                            <Button MinWidth="40" MinHeight="30" Style="{StaticResource imageButtonFocus}" Margin="30,0,0,0">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Assets/BoardUI/sendIcon.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Grid>
                <!-- Board-->
                <Grid x:Name="gridBoard" MinWidth="550" Margin="30,35,30,35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!-- first row-->
                    <ToggleButton Grid.Row="0" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="0" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="0" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="0" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="0" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <!-- second row-->
                    <ToggleButton Grid.Row="1" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="1" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="1" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="1" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="1" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <!-- third row-->
                    <ToggleButton Grid.Row="2" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="2" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="2" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="2" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="2" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <!-- forth row-->
                    <ToggleButton Grid.Row="3" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="3" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="3" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="3" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="3" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <!-- fifth row-->
                    <ToggleButton Grid.Row="4" Grid.Column="0" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="4" Grid.Column="1" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="4" Grid.Column="2" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="4" Grid.Column="3" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                    <ToggleButton Grid.Row="4" Grid.Column="4" Click="Click_Keyword" Style="{StaticResource dynamicImageToggleButton}" Background="Beige" />
                </Grid>
                <!-- Token stack panel-->
                <StackPanel VerticalAlignment="Center">
                    <Label Content="Timer" Style="{StaticResource subtitle}" Foreground="Black" />
                    <Label Content="30" Style="{StaticResource title}" Foreground="Black" />
                    <Label Content="Timer Tokens" Style="{StaticResource normal}" Foreground="Black"/>
                    <Label Content="x0" Style="{StaticResource title}" Background="Gray" MinWidth="100" MinHeight="50" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Foreground="Black" />
                    <Label Content="Bystander Tokens" Style="{StaticResource normal}" Foreground="Black"/>
                    <Label Content="x0" Style="{StaticResource title}" Background="Khaki" Foreground="Black" MinWidth="100" MinHeight="50" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
