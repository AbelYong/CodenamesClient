<Window x:Class="CodenamesClient.GameUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodenamesClient.GameUI"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:CodenamesClient.Properties.Langs"
        Title="Codenames: Duet" Height="640" Width="1024" Background="#FF1D1D1D">
    <Grid>
        <Label Content="Codenames:" HorizontalAlignment="Left" Margin="229,61,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Consolas" FontSize="72"/>
        <Label Content="Duet" HorizontalAlignment="Left" Margin="640,67,0,0" VerticalAlignment="Top" Foreground="White" FontSize="72" FontFamily="Bell MT"/>
        <Label Content="{x:Static language:Lang.globalUsername}" Style="{StaticResource subtitle}" Margin="0,155,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txb" HorizontalAlignment="Left" Margin="350,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontFamily="Consolas" FontSize="24" Background="Transparent" BorderBrush="White" Foreground="White" SelectionBrush="#FFD6D6D6"/>
        <Label Content="*errorMessage1" Style="{StaticResource normal}" Margin="0,233,0,0" VerticalAlignment="Top" Width="438"/>
        <Label Content="{x:Static language:Lang.loginPassword}" Style="{StaticResource subtitle}" HorizontalAlignment="Left" Margin="452,267,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="350,310,0,0" VerticalAlignment="Top" Width="320" FontFamily="Consolas" FontSize="16" Background="Transparent" BorderBrush="White" Foreground="White" SelectionBrush="#FFD6D6D6" Height="30"/>
        <Label Content="*errorMessage2" Style="{StaticResource normal}" Margin="0,345,0,0" VerticalAlignment="Top" Width="438"/>
        <Button Content="{x:Static language:Lang.loginLogIn}" Style="{StaticResource buttonCustomFocus}" HorizontalAlignment="Center" Margin="0,379,0,0" VerticalAlignment="Top" Width="316" Background="#00DDDDDD" FontSize="24" Height="60"/>
        <Label Content="{x:Static language:Lang.loginDontHaveAccount}" Style="{StaticResource normal}" HorizontalAlignment="Left" Margin="354,444,0,0" VerticalAlignment="Top"/>
        <Button Content="{x:Static language:Lang.loginSignIn}" Style="{StaticResource buttonCustomFocus}" HorizontalAlignment="Left" Margin="563,446,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontSize="16" Background="#00DDDDDD" BorderBrush="#00000000" FontWeight="Normal" FontStyle="Italic" Width="107"/>
        <Button Content="{x:Static language:Lang.loginPlayAsGuest}" Style="{StaticResource buttonCustomFocus}" HorizontalAlignment="Center" Margin="0,478,0,0" VerticalAlignment="Top" Height="60" Width="316" Background="Transparent" BorderBrush="White" FontSize="24"/>

    </Grid>
</Window>
